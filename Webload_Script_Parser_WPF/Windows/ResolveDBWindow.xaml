<Window x:Class="WLScriptParser.Windows.ResolveDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WLScriptParser.Windows"
        mc:Ignorable="d"
        Title="Resolving Database" Height="220" Width="420"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text_Block" Grid.Row="0" FontSize="12" Margin="10,20,10,0" HorizontalAlignment="Center" TextWrapping="Wrap" >
            Checking for an instance of WLScriptsDB on your machine</TextBlock>
        <StackPanel x:Name="Stack_Panel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
            <Button x:Name="Cancel_Button" Content="Cancel" Margin="5" Height="20" Width="90" Click="Cancel_Button_Click"/>
            <Button x:Name="Next_Button" Content="Next" Margin="5" Height="20" Width="90" IsEnabled="False" Click="Next_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
